<div class="mt-4">
    <h3>Chỉnh sửa khóa học</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="InputName" value="{{course.name}}" placeholder="Nhập tên" name="name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="InputDescription" placeholder="Nhập mô tả" name="description">{{course.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="InputVideoId" value="{{course.videoId}}" placeholder="Nhập Video ID" name="videoId">
        </div>

        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="InputLevel" value="{{course.level}}" placeholder="Nhập trình độ" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
    
</div>